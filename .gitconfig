[user]
    email = kapsh@kap.sh
    name = kapsh

[push]
    default = simple

[alias]

    # Shortcuts for simple commands
    co = checkout
    st = status -sb
    commend = commit --amend
    staged = diff --staged

    lg = log --graph --abbrev-commit --decorate --format=format:'\
%C(bold blue)%h%C(reset) \
%C(bold white)%s%C(reset)\
%C(magenta)%d%C(reset)\
%n        \
%C(green)%an%C(reset)\
%C(cyan) - %ar%C(reset) \
%C(yellow)(%ai)%C(reset)\
%n'

    # Rollback commit but keep changes
    undo = reset --mixed HEAD~1

    # Remove specified file from staged changes
    unstage = reset HEAD --

    # Update master and rebase on it
    shift = !git fetch origin master && git rebase master

[core]
    excludesfile = .config/global_gitignore

[pager]
	branch = false
	stash = false
