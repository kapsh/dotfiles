[user]
    email = kapsh@kap.sh
    name = Alexander Kapshuna

[push]
    default = simple

[alias]

    co = checkout -q
    st = status -sb
    amend = commit --amend --no-edit
    staged = diff --staged
    unstage = reset HEAD --

    lg = log --graph --abbrev-commit --decorate --format=format:'\
%C(bold blue)%h%C(reset) \
%C(bold white)%s%C(reset)\
%C(magenta)%d%C(reset)\
%n        \
%C(green)%an%C(reset)\
%C(cyan) - %ar%C(reset) \
%C(yellow)(%ai)%C(reset)\
%n'

[core]
    excludesfile = .config/global_gitignore
    quotePath = false
    pager = delta

[pager]
    branch = false
    stash = false

    tag = less -F

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    light = false

[merge]
    conflictstyle = diff3

[diff]
    algorithm = histogram
	renames = copies
    colorMoved = default

[rebase]
    autosquash = true

[tag]
	sort = creatordate

[protocol]
	version = 2

[advice]
	detachedHead = no
	statusHints = no

[pull]
	ff = only

